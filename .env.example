# File: documind-enterprise/.env.example 
# Purpose: Template for environment variables. Ensure POSTGRES_HOST matches the service name in docker-compose.

# ==============================================================================
# DOCUMIND ENTERPRISE - ENVIRONMENT CONFIGURATION
# ==============================================================================

# -- Application Settings --
PROJECT_NAME="DocuMind Enterprise"
API_V1_STR="/api/v1"
SECRET_KEY="change_this_to_a_secure_random_string_in_production"
DEBUG=True

# -- Database Configuration (PostgreSQL + PGVector) --
# Note: Using 'db' as hostname as defined in docker-compose
POSTGRES_SERVER=db
POSTGRES_USER=documind_admin
POSTGRES_PASSWORD=secure_password_123
POSTGRES_DB=documind_db
POSTGRES_PORT=5432

# -- AI Model Configuration --
# Get this from https://platform.openai.com/api-keys
OPENAI_API_KEY=
EMBEDDING_MODEL=text-embedding-3-small